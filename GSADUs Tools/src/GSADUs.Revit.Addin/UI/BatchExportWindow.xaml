<Window x:Class="GSADUs.Revit.Addin.UI.BatchExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch Export" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition/><RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <GroupBox Header="Selection Sets" Margin="0,0,0,8">
      <ListBox x:Name="SetsList" SelectionMode="Extended" MinWidth="360" MinHeight="180"/>
    </GroupBox>

    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
      <TextBox x:Name="OutputDirBox" Width="360"/>
      <Button x:Name="BrowseBtn" Content="Browse..." Width="90" Margin="8,0,0,0" Click="BrowseBtn_Click"/>
    </StackPanel>

    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
      <CheckBox x:Name="SaveBeforeBox" Content="Save before export" IsChecked="True" Margin="0,0,16,0"/>
      <CheckBox x:Name="DetachBox" Content="Detach from central" Margin="0,0,16,0"/>
      <CheckBox x:Name="RecenterBox" Content="Recenter XY" Margin="0,0,16,0"/>
      <CheckBox x:Name="OverwriteBox" Content="Overwrite"/>
    </StackPanel>

    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Run" Width="90" IsDefault="True" Click="Run_Click"/>
      <Button Content="Cancel" Width="90" Margin="8,0,0,0" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>
